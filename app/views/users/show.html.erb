<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
      <div class="media-left">
        <%= image_tag avatar_url, class: 'media-object' %>
      </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %></h2>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>
<% if no_user_posts %>
  <h3>Has not made any posts.</h3>
<% end %>
<% if !no_user_posts %>
  <h2>Posts</h2>
  <%= render @user.posts %>
<% end %>
<% if no_user_comments %>
  <h3>Has not made any comments.</h3>
<% else %>
  <h2>Comments</h2>
  <%= render @user.comments %>
<% end %>
