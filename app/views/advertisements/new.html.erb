<h1>New AD</h1>
<div class="row">
  <div class="col-md-2">
<%= form_for @advertisement do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label "Message" %>
    <%= f.text_area :copy %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_area :price %>
  </div>
    <%= f.submit "Save" %>
  </div>
</div>
<% end %>
